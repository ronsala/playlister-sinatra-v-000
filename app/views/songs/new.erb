<h1>Add a New Song:</h1>

<form>
  <form action="/songs" method="post">
  <label>Name </label>
  <input type="text" id="song_name" name="Name" value =""><br><br>

  <label>Choose an existing genre: </label><br>
  <%@genres.each do |g|%>
    <label><%= g.name %></label>
    <input type="checkbox" name="genres[]" value="<%= g.id %>" id="<%= g.name %>"><br>
    <%end%>

    <br>

  <label>Artist Name</label>
  <input type="text" id="artist_name" name="Artist Name" value="">

  <br>

  <label> Or choose an existing artist </label><br>
  <%@artists.each do | a |%>
    <label><%= a.name %></label>
    <input type="checkbox" name="<%= a.name %>" value="<%= a.name %>" id="<%= a.name %>"><br>
  <%end%>
  <br>

  <input type="submit" value="Create">
</form>
