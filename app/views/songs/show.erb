<% if flash[:message] %>
  <p><strong><%= flash[:message] %></strong></p>
<% end %>

<h1>Title: <%= @song.name %></h1>
<h2><a href="/artists/<%= @song.artist.slug %>">Artist: <%= @song.artist.name %></a></h2>
<h2>Genres:<h2>
<% @song.genres.each do | g |%>
  <a href="/genres/<%= g.slug %>"><%= g.name%></a>
<% end %>